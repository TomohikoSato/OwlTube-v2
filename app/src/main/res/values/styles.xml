<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/grey500</item>
        <item name="colorAccent">@color/primary</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/fade</item>
        <item name="android:windowExitTransition">@android:transition/fade</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/fade</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/fade</item>
    </style>

    <style name="ToolBar" parent="AppTheme">
        <item name="android:textColorPrimary">@color/primary</item>
    </style>

    <style name="SearchPlaceHolder" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">@color/grey500</item>
        <item name="android:colorControlNormal">@color/grey500</item>
        <item name="android:colorControlActivated">@color/grey500</item>
        <item name="android:colorControlHighlight">@color/grey500</item>
        <item name="android:background">@drawable/search_placeholder_background</item>
    </style>
</resources>
